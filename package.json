{
  "name": "zhlint",
  "version": "0.3.0",
  "description": "A linting tool for Chinese language.",
  "bin": {
    "zhlint": "./bin/index.js"
  },
  "exports": {
    "import": "./dist/zhlint.es.js",
    "require": "./dist/zhlint.umd.js"
  },
  "main": "./dist/zhlint.umd.js",
  "module": "./dist/zhlint.es.js",
  "unpkg": "./dist/zhlint.umd.js",
  "jsdelivr": "./dist/zhlint.umd.js",
  "types": "./types/index.d.ts",
  "files": [
    "./src/*",
    "./types/*",
    "./tsconfig.json",
    "./dist/*",
    "./bin/*",
    "./docs/*.png",
    "./docs/logo.svg",
    "./README.md"
  ],
  "scripts": {
    "dev": "vitest",
    "dev:ui": "vitest --ui",
    "build": "vite build",
    "test": "vitest run",
    "coverage": "vitest --coverage",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jinjiang/zhlint.git"
  },
  "keywords": [
    "lint",
    "zh",
    "Chinese"
  ],
  "author": "Jinjiang <zhaojinjiang@me.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jinjiang/zhlint/issues"
  },
  "homepage": "https://github.com/Jinjiang/zhlint#readme",
  "devDependencies": {
    "@algolia/client-search": "^4.12.0",
    "@types/react": "^17.0.38",
    "@vitest/ui": "^0.0.139",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vite": "^2.7.10",
    "vitepress": "^0.21.4",
    "vitest": "^0.0.139"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "glob": "^7.1.6",
    "minimist": "^1.2.0",
    "remark-frontmatter": "^1.3.2",
    "remark-parse": "^7.0.2",
    "unified": "^8.4.2"
  }
}
