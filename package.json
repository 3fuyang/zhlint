{
  "name": "zhlint",
  "version": "0.2.1",
  "description": "A linting tool for Chinese language.",
  "bin": {
    "zhlint": "bin/index.js"
  },
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "unpkg": "dist/zhlint.js",
  "jsdelivr": "dist/zhlint.js",
  "files": [
    "src/*",
    "types/*",
    "bin/*",
    "dist/*",
    "tsconfig.json",
    "*.png",
    "logo.svg",
    "README.md"
  ],
  "scripts": {
    "dev": "jest --watchAll",
    "test": "jest",
    "build": "webpack",
    "docs": "vuepress dev",
    "docs:build": "rm -Rf docs && vuepress build -d docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jinjiang/zhlint.git"
  },
  "keywords": [
    "lint",
    "zh",
    "Chinese"
  ],
  "author": "Jinjiang <zhaojinjiang@me.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jinjiang/zhlint/issues"
  },
  "homepage": "https://github.com/Jinjiang/zhlint#readme",
  "devDependencies": {
    "jest": "^24.8.0",
    "vuepress": "^1.4.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "glob": "^7.1.6",
    "minimist": "^1.2.0",
    "remark-frontmatter": "^1.3.2",
    "remark-parse": "^7.0.2",
    "unified": "^8.4.2"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    }
  }
}
